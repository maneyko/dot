#!/bin/bash

temp_dir='__temp_dir'

if ! test -x "`which pyinstaller`"; then
  exit 1
fi

for p in $@; do
  if ! test -f $p; then continue; fi
  mkdir ${p}${temp_dir} && cd ${p}${temp_dir}
  cp ../$p .
  pyinstaller --onefile $p > /dev/null 2>&1
  mv dist/* ../
  cd ../
  rm -fr ${p}${temp_dir}
done

