#!/bin/bash

if test $(uname) = 'Darwin'
then
  PATH="\
/usr/local/bin:\
/usr/local/sbin:\
/usr/bin:\
/usr/sbin:\
/bin:\
/sbin:
"
  unalias -a
  brew update
  brew update
  brew upgrade
else
  apt-get update
  apt-get dist-upgrade
fi

$HOME/.bin/pip-upgrade
$HOME/.bin/pip-upgrade -3
npm update -g
npm upgrade -g
test $(uname) = 'Darwin' && brew doctor
. ~/.bashrc >/dev/null
