#!/bin/bash

test "$1" = '255.255.255.255' && {
  echo '0.0.0.0'
  exit 1
}

IP=$1
IP_HEX=$(printf '%.2X%.2X%.2X%.2X\n' `echo $IP | perl -pe 's/\./ /g'`)
NEXT_IP_HEX=$(printf %.8X `echo "ibase=16;$IP_HEX + 1" | bc`)
NEXT_IP=$(printf '%d.%d.%d.%d\n' `echo $NEXT_IP_HEX | perl -pe 's/(..)/0x\1 /g'`)
echo "$NEXT_IP"
