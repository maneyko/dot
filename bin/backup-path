#!/bin/bash


if test ! -f "$1"; then
  echo "'$1' is not a valid file!"
  exit 1
fi

f="$1"

read -r num ext <<< $(echo "$f" \
                        | perl -ne 'print "$1 $2" if /\.?([\d]+)?\.([\w]+)$/')
if test -z "$ext"; then
  ext="$num"
  cp -v "$f" "${f%$ext}1.$ext"
  exit 0
fi

fbase="$(echo "$f" | perl -a -F'\.' -lne 'print join(".", @F[0..$#F-2])')"

if test -n "$fbase"; then
  fbase=".${fbase}"
fi

while test -f "${fbase}${num}.${ext}"; do
  num=$(echo "$num + 1" | bc)
done

cp -v "$f" "${fbase}${num}.${ext}"
