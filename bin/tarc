#!/bin/bash


EXTENSIONS=(
bz2
gz
lz
lzo
lzma
taz
taZ
tbz
tbz2
tgz
tlz
tz2
xz
Z
)

ext='gz'

POSITIONAL=()
while test $# -gt 0; do
  key=$1
  case $key in
    -e)
      ext="$2"
      shift
      shift
      ;;
    *)
    POSITIONAL+=("$1")
    shift ;;
  esac
done
set -- "${POSITIONAL}"

f="${POSITIONAL[0]}"

tar -a -cvf "${f%/}.tar.${ext}" "$f"
