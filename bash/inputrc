
# tab completion regardless of case
set completion-ignore-case on

# colored tab completion
set colored-stats on

# dont show hidden folders on tab completion
set match-hidden-files off

# complete slash when going to symlinked directory
set mark-symlinked-directories on

# https://cnswww.cns.cwru.edu/php/chet/readline/readline.html
# bind -V | less  # for 'set' options
# bind -p | less  # for keys

# 'M-F12' calls pwd
"\e[24~":          "pwd\n"
"\e\C-l":          "cls\n"
