# Paths
# =====

export PATH="\
$HOME/local/bin:\
$HOME/.bin:\
/usr/local/bin:\
/usr/local/sbin:\
/usr/bin:\
/usr/sbin:\
/bin:\
/sbin:\
"

export MANPATH="\
$HOME/local/share/man:\
/usr/local/share/man:\
/usr/local/man:\
/usr/share/man:\
"

export PYTHONPATH="$HOME/.ipython/maneyko:$PYTHONPATH"

test $(uname) = 'Darwin' && {
  export MACOS=true
}

# Terminal Interface
# ==================

export BACKGROUND='dark'
export EDITOR='vim'
export GREP_COLOR='0;34'
export LESS='-rI'
export PAGER='less'

test -f "$HOME/.pythonrc.py" && {
  export PYTHONSTARTUP="$HOME/.pythonrc.py"
}

clr () { # (number, text)
  esc="\033"
  printf "\[$esc[38;5;%dm\]%s\[$esc[0m\]" "$1" "$2"
}

border_color=241
user_color=196
host_color=255
host_text='OSX'
pwd_color=228
test $(whoami) = 'root' && {
  user_color=220  # Yellow
}
export PS1="\
`clr $border_color  '┌─['         `\
`clr $user_color    "$(whoami)"   `\
`clr 250            '@'           `\
`clr $host_color    "$host_text"  `\
`clr $border_color  ']─|─['       `\
`clr $pwd_color     '\\w'         `\
`clr $border_color  ']'           `\
\n\
`clr $border_color  '└['          `\
`clr 7              '\\$'         `\
`clr $border_color  ']› '         `\
"

export SHORT_PS1="\
`clr $border_color   '['   `\
`clr $pwd_color      '\\w' `\
`clr $border_color   ']'   `\
\n\
`clr 255             '\\$ ' `\
"

# Sourcing
# ========

test $MACOS && {
  for f in $HOME/.mac/*.bash; do
    source $f
  done
}

for f in $HOME/.bash/*.bash; do
  source $f
done

test -f $HOME/.bashrc.local && {
  source $HOME/.bashrc.local
}
